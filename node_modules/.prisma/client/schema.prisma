generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Game {
  id      String       @id @default(cuid())
  status  GameStatus
  players GamePlayer[] @relation("players")
  field   Json?

  winner     GamePlayer? @relation("winnerRelation", fields: [winnerId], references: [id])
  winnerId   String?     @unique
  gameOverAt String?
}

enum GameStatus {
  idle
  inProgress
  gameOver
  gameOverDraw
}

model GamePlayer {
  id     String @id @default(cuid())
  gameId String
  game   Game   @relation("players", fields: [gameId], references: [id])
  userId String
  user   User   @relation(fields: [userId], references: [id])
  index  Int

  winnerOf Game? @relation("winnerRelation")
}

model User {
  id           String       @id @default(cuid())
  login        String
  rating       Int
  passwordHash String
  salt         String       @default("")
  players      GamePlayer[]
}
